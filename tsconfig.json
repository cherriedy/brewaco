{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "#apps/*": ["apps/*"],
      "#core/*": ["core/*"],
      "#utils/*": ["utils/*"],
      "#common/*": ["common/*"],
      "#config/*": ["config/*"],
      "#interface/*": ["interface/*"],
      "#errors/*": ["errors/*"],
      "#gateway/*": ["gateway/*"],
      "#type/*": ["type/*"],
      "#types/*": ["types/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"]
}
