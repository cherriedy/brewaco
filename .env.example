# Server Ports
PUBLIC_PORT=9001
PROTECTED_PORT=9002

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/brewaco
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=brewaco

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (MailerSend)
MAILERSEND_API_KEY=your-mailersend-api-key
MAILERSEND_FROM_EMAIL=noreply@yourdomain.com
MAILERSEND_FROM_NAME=Brew&Co

# MeiliSearch Configuration
MEILI_HOST=http://localhost:7700
MEILI_MASTER_KEY=your_local_key
MEILI_INDEX_PRODUCTS=products

# Application Environment
NODE_ENV=development

# CORS Origins (regex patterns)
# Update these with your actual domain names
PUBLIC_ALLOWED_ORIGINS=^https?:\/\/api\.domain\..*
PROTECTED_ALLOWED_ORIGINS=^https?:\/\/admin\.domain\..*

# VNPAY
VNPAY_VERSION=2.1.0
VNPAY_TMN_CODE=YOUR_TMN_CODE
VNPAY_HASH_SECRET=YOUR_HASH_SECRET
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:9001/vnpay/return
