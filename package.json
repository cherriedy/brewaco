{
  "name": "brewaco",
  "version": "1.0.0",
  "description": "An Express.Js with TypeScript, ESLint, and Prettier",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "dev": "tsx watch --env-file .env.production src/app.ts locales",
    "dev:public": "tsx watch --env-file .env.production src/apps/public/app.public.ts locales",
    "dev:admin": "tsx watch --env-file .env.production src/apps/protected/app.protected.ts locales",
    "dev:both": "concurrently \"npm run dev:public\" \"npm run dev:admin\"",
    "start": "node --env-file .env.production dist/app.js",
    "start:public": "node --env-file .env.production dist/apps/public/app.public.js",
    "start:admin": "node --env-file .env.production dist/apps/protected/app.protected.js",
    "start:both": "concurrently \"npm run start:public\" \"npm run start:admin\"",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cherriedy/express.ts-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cherriedy/express.ts-template/issues"
  },
  "homepage": "https://github.com/cherriedy/express.ts-template#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "geoip-lite": "^1.4.10",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "http-status-code": "^2.1.0",
    "http-status-codes": "^2.3.0",
    "i18next": "^25.6.0",
    "i18next-fs-backend": "^2.6.0",
    "jsonwebtoken": "^9.0.2",
    "mailersend": "^2.6.0",
    "meilisearch": "^0.54.0",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.1",
    "querystring": "^0.2.1",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/geoip-lite": "^1.4.4",
    "@types/handlebars": "^4.0.40",
    "@types/i18next-fs-backend": "^1.1.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.9.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^4.0.1",
    "@vitest/eslint-plugin": "^1.3.23",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.1"
  }
}
